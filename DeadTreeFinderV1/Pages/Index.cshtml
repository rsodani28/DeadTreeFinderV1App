<div id="map"></div>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA4gGirxmWJZfvEnkCCu88eI_G9gj6yXpY&callback=initMap" async defer></script>
<script>
    function initMap() {
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(function (position) {
                const userLocation = {
                    lat: position.coords.latitude,
                    lng: position.coords.longitude
                };
                const map = new google.maps.Map(document.getElementById('map'), {
                    center: userLocation,
                    zoom: 14
                });
                map.addListener('click', function (event) {
                    addMarker(event.latLng, map);
                });
            }, function () {
                handleLocationError(true, map.getCenter());
            });
        } else {
            handleLocationError(false, map.getCenter());
        }
    }

    function addMarker(location, map) {
        const marker = new google.maps.Marker({
            position: location,
            map: map
        });
        const contentString = `
                <div>
                    <h4>Report Problem</h4>
                    <form id="problemForm">
                        <label for="description">Description:</label><br>
                        <textarea id="description" name="description"></textarea><br><br>
                        <label for="photo">Upload Photo:</label><br>
                        <input type="file" id="photo" name="photo"><br><br>
                        <input type="submit" value="Submit">
                    </form>
                </div>
            `;
        const infowindow = new google.maps.InfoWindow({
            content: contentString
        });
        infowindow.open(map, marker);

        document.getElementById('problemForm').addEventListener('submit', function (e) {
            e.preventDefault();
            console.log("Form submitted"); 
            const description = document.getElementById('description').value;
            const photo = document.getElementById('photo').files[0];
            const photoFileName = photo ? photo.name : '';

            const pinData = {
                Latitude: location.lat(),
                Longitude: location.lng(),
                Description: description,
                PhotoFileName: photoFileName
            };

            console.log("Sending pin data:", pinData);
            fetch('/api/pin/SavePin', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(pinData)
            })
                .then(response => response.text())
                .then(data => {
                    console.log(data);
                })
                .catch(error => {
                    console.error('Error:', error);
                });

            infowindow.close();
        });
    }

